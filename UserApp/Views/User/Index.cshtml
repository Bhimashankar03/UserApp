@model List<User>

<html>
<head>
	<title></title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
	<form method="post" asp-action="Index" asp-controller="User">
		<table class="table">
			<thead>
				<tr>
				<th>Id </th>
					<th>Name </th>
					<th>Address </th>
					 <th>Action</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				@{
					foreach(User user in Model)
					{
						<tr>
							<td>@user.Id</td>
							<td>@user.Name</td>
							<td>@user.Address</td>
							<td><a href="/User/Delete/@user.Id" onclick="return confirm('Do you want to delete this data');">Delete</a></td>
							<td><a href="/User/Update/@user.Id">Update</a></td>
						</tr>
					}
				}

			</tbody>
		</table>
	<a href="/User/Create">Add new User</a>
	
	</form>
</body>
</html>
